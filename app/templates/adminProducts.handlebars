<h2>{{# link-to "productNew"}}Create a New Product</h2>{{/link-to}}

<h3>All Products</h3>

<div class="row">
  {{# each }}
  <div class="col-lg-4">
    {{# link-to "productEdit" this }}
      <h4>{{ name }}</h4>
      <img {{ bind-attr src=avatar }} class='thumbnail' />
      {{/ link-to }}
      <strong><p>${{ format-price price }}</p></strong>
      <button {{ action "productDelete" this }}>Delete Product</button>
    </div>
  {{/ each}}
</div>
      {{ outlet }}