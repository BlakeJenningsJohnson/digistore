<h1>Products Directory</h1>
 <h3>All Products</h3>
    <div class="row">
      {{# each }}
      <div class="col-lg-4">
        {{# link-to "product" this }}
          <h4>{{ name }}</h4>
          <img {{ bind-attr src=avatar }} class='thumbnail' />
          {{/ link-to }}
          <strong><p>${{ price }}</p></strong>
          <button href="#addcart" {{action "addToCart" this }}>Add To Cart</button>
        </div>
      {{/ each}}
  <div class='col-lg-10'>
    {{ outlet }}
  </div>
</div>