<h1>Cart</h1>
  <div class="table-responsive">
    <table class="table table-bordered">
      {{# each items }}
        <thead>
          <tr>
            <th>Product</th>
            <th></th>
            <th>Price</th>
            <th>Quantity</th>
            <th>Subtotal</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td><img {{ bind-attr src=product.avatar }} class='thumbnail'></td>
            <td>  {{ this.product.name }} </td>
            <td>${{ format-price this.product.price }}</td>
            <td>
              {{ quantity }}
              <button {{ action "more" this }}>+</button>
              <button {{ action "less" this }}>-</button>
            </td>
            <td>${{ subtotal quantity product.price}}</td>
          </tr>
          {{/ each }}
        </tbody>
      </table>
    </div>